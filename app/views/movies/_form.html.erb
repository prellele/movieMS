<%= form_for(@movie) do |f| %>
 
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :resolution %><br />
    <%= f.select :resolution, Movie::AVAILABLE_RESOLUTIONS %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
