<% content_for :header do %>
  <%= javascript_include_tag :selector %>
<% end %>

<%= form_tag("/movies/list", :method => "get") do %>
Display:
<%= select_tag("filter", options_for_select(['all entrys', 'favorites', 'no favorites'], params[:filter])) %>
  <%= submit_tag("Go!") %>
<% end %>
<ul class="movielist">
<% @movies.each do |movie| %>
<% movie.fill_with_dbinfo() %>
    <li class="movierow id">
		<ul class="movieinfo selectable" data-id="<%= movie.id %>">
		  <li class="movieheader" >
		  <% if current_user.favorite_for(movie) %>
			<%= image_tag("star_color.png", :class => 'star') %>
		  <% else %>
			<%= image_tag("star_bw.png", :class => 'star') %>
		  <% end %>
		  	<h3 class="movietitle"><%= movie.name %> (<%= movie.original_title %>)</h3>
		  	<h5 class="movierating">Imdb: <%= movie.rating %></h5>
		  </li>
		  <li><img class="cover" src="/assets/cover/<%= movie.poster %>.jpg"></li>
		  <li class="movieplot moviedetails"><%= movie.plot %></li>
		  <li class="moviedetails"><b>Regie:</b> <%= movie.directors_string %></li>
		  <li class="moviedetails"><b>Produzent:</b> <%= movie.producers_string %></li>
		  <li class="moviedetails"><b>Actor:</b> <%= movie.actors_string %></li>
		  <li class="moviedetails"><b>Genres:</b> <%= movie.genres_string %></li>
		  <li class="moviedetails"><b>Release Date:</b> <%= movie.release_date %></li>
		  <li class="moviedetails"><b>Length:</b> <%= movie.length %>min</li>
		</ul>
<% if (movie.user_id == current_user.id) %>
       <%= link_to 'Edit', edit_movie_path(movie) %><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %>
     <% end %>
	</li>
<% end %>
</ul>
<div style="clear:both;padding-top:20px;"></div>
<h5>Summe der Filme: <%= @sum_movies -%></h5>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, :container => false %>
</div>
