<table>
  <tr style="text-align:left;">
    <th style="width:45%;"><%= order_by_links("Name", "name") %></th>
    <th><%= order_by_links("User", "user_id") %></th>
    <th><%= order_by_links("Created At", "created_at") %></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td class="withBorders"><%= movie.name %></td>
    <td class="withBorders"><%= movie.user.username %></td>
    <td class="withBorders"><%= movie.created_at.to_date %></td>
    <% if (movie.user_id == current_user.id) %>
      <td><%= link_to 'Edit', edit_movie_path(movie) %><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
<p>Summe der Filme: <%= @sum_movies -%></p>
